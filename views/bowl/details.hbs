<div>

  {{#with this.bowlParams}}

    <h1>Pecera {{name}}</h1>

    <p>Capacidad: {{capacity}}</p>
    <p>Tipo de agua: {{water}}</p>
    <p>Tapa? {{isClosed}}</p>
    <p>Creador: {{owner.username}}</p>

    <a href="/bowl/{{_id}}/edit"><button>Editar pecera</button></a>
    <br />

  {{/with}}

  <form action="/bowl/{{this.bowlParams._id}}/delete" method="post">
    <button>Eliminar pecera</button>
  </form>

{{#each allFishes}}
  <h5>{{name}}</h5>
  <h6>Edad: {{age}}</h6>
  <h6>Clase: {{fish.name}}</h6>
  <form action="/myfish/{{_id}}/delete" method="post">
    <button>Eliminar</button>
  </form>
  <a href="/myfish/{{_id}}/edit"><button>Editar</button></a>
{{/each}}

